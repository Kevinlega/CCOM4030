<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardActivity">

    <ImageView
            android:layout_width="65dp"
            android:layout_height="67dp" app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:id="@+id/Friends"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/Logout" android:layout_marginEnd="251dp"
            android:contentDescription="@string/friends"/>
    <Button
            android:text="@string/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Logout" android:layout_marginStart="251dp"
            app:layout_constraintStart_toEndOf="@+id/Friends" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/create_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreateProject" android:layout_marginStart="54dp"
            app:layout_constraintStart_toEndOf="@+id/Friends" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="136dp"/>
    <GridView
            android:layout_width="395dp"
            android:layout_height="622dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/CreateProject"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/Projects"/>
</android.support.constraint.ConstraintLayout>