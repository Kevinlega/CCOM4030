<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NotVerifiedActivity">

    <TextView
            android:text="Account not verified"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:id="@+id/textView5"
            android:textAppearance="@android:style/TextAppearance.DialogWindowTitle" android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="45dp"/>
    <Button
            android:text="Send verification email again?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="79dp"
            android:layout_marginTop="188dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="79dp"/>
</android.support.constraint.ConstraintLayout>