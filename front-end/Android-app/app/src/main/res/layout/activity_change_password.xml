<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangePasswordActivity">

    <EditText
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmPassword"
            android:hint="Re-type Password"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="21dp"
            android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="59dp"/>
    <Button
            android:text="Create Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createAccount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="134dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/confirmPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="134dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" android:text="Password:"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/email" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="296dp"/>
    <Button
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sigin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="94dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/createAccount" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="94dp"/>
    <EditText
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="@string/prompt_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21dp" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="49dp"/>
    <EditText
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="55dp"/>
    <TextView
            android:text="Confirm Password:"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/textView14"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/password" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="219dp"/>
    <TextView
            android:text="Email Address:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="53dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="256dp"/>
</android.support.constraint.ConstraintLayout>