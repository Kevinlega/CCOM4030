<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProjectActivity">

    <Button
            android:text="Save?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SaveImage" android:layout_marginStart="137dp"
            app:layout_constraintStart_toEndOf="@+id/Gallery" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/AddUsers"/>
    <Button
            android:text="Add Participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddUsers"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/BackToDashboard"
            android:layout_marginStart="119dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/Gallery" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/Camera"
            app:layout_constraintEnd_toStartOf="@+id/SaveImage"
            android:layout_marginEnd="137dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/BackToDashboard"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/Camera" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/Gallery"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/BackToDashboard"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackToDashboard" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
    />
</android.support.constraint.ConstraintLayout>