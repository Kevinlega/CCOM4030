<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DownloadAudioActivity">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/playVoice2"
            app:layout_constraintStart_toEndOf="@+id/stopVoice2"
            app:layout_constraintEnd_toStartOf="@+id/pauseVoice2"
            android:layout_marginBottom="284dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="175dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="54dp"
            android:layout_height="51dp" app:srcCompat="@drawable/stop"
            android:id="@+id/stopVoice2" android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            app:layout_constraintEnd_toStartOf="@+id/playVoice2"
            android:layout_marginTop="175dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="284dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_pause"
            android:id="@+id/pauseVoice2"
            app:layout_constraintStart_toEndOf="@+id/playVoice2" android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="175dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="103dp"
            android:layout_marginBottom="284dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackToProject7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="280dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="439dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>