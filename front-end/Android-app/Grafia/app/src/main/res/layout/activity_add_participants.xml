<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddParticipantsActivity">

    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackToProject" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
    />
    <Button
            android:text="Add Participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddParticipants"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="100dp"
            app:layout_constraintStart_toEndOf="@+id/BackToProject" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <ListView
            android:layout_width="379dp"
            android:layout_height="429dp"
            android:id="@+id/listView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/searchBarFriends"
            app:layout_constraintHorizontal_bias="0.0"/>
    <SearchView
            android:layout_width="368dp"
            android:layout_height="41dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/BackToProject" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/searchBarFriends"/>
</android.support.constraint.ConstraintLayout>