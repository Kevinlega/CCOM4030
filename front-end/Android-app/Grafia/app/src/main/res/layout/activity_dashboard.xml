<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardActivity">

    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/CreateProject" android:layout_marginStart="35dp"/>
    <Button
            android:text="Create Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreateProject"
            android:layout_marginStart="39dp" app:layout_constraintStart_toEndOf="@+id/Friends"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="17dp"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="49dp" app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:id="@+id/Friends"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/logout" android:layout_marginEnd="215dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="385dp"
            android:layout_height="447dp"
            android:id="@+id/rview" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/CreateProject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>