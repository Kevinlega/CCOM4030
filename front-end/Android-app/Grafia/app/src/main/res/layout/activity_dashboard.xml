<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardActivity">

    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
    />
    <Button
            android:text="Create Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreateProject" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="121dp"/>
    <GridView
            android:layout_width="368dp"
            android:layout_height="260dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/Projects"
            android:layout_marginTop="39dp" app:layout_constraintTop_toBottomOf="@+id/ProjectView"/>
    <Button
            android:text="Project View Dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProjectView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/CreateProject"/>
    <ImageButton
            android:layout_width="49dp"
            android:layout_height="49dp" app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:id="@+id/Friends"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/logout" android:layout_marginEnd="215dp"/>
</android.support.constraint.ConstraintLayout>