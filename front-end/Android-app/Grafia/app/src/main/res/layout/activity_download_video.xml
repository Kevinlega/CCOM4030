<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DownloadVideoActivity">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_save"
            android:id="@+id/saveVideo2"
            app:layout_constraintStart_toEndOf="@+id/BackToProject8"
            app:layout_constraintEnd_toStartOf="@+id/stopVideo2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/videoView2"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackToProject8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/videoView2"
            app:layout_constraintEnd_toStartOf="@+id/saveVideo2" android:layout_marginEnd="56dp"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_pause"
            android:id="@+id/pauseVideo2"
            app:layout_constraintStart_toEndOf="@+id/playVideo2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/videoView2"/>
    <ImageButton
            android:layout_width="54dp"
            android:layout_height="51dp" app:srcCompat="@drawable/stop"
            android:id="@+id/stopVideo2" android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@+id/saveVideo2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp" app:layout_constraintEnd_toStartOf="@+id/playVideo2"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/videoView2"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/playVideo2"
            app:layout_constraintStart_toEndOf="@+id/stopVideo2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp" app:layout_constraintEnd_toStartOf="@+id/pauseVideo2"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/videoView2"/>
    <VideoView
            android:layout_width="378dp"
            android:layout_height="422dp"
            android:id="@+id/videoView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/BackToProject8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>