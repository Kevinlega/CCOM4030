<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VoiceActivity">

    <ImageButton
            android:layout_width="58dp"
            android:layout_height="52dp" app:srcCompat="@android:drawable/ic_btn_speak_now"
            android:id="@+id/recordVoice"
            tools:srcCompat="@drawable/voice"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@+id/backToProject3" android:layout_marginStart="24dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_pause"
            android:id="@+id/pauseVoice"
            app:layout_constraintStart_toEndOf="@+id/playVoice" android:layout_marginTop="188dp"
            app:layout_constraintTop_toBottomOf="@+id/uploadVoice" android:layout_marginStart="56dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/playVoice"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toEndOf="@+id/stopVoice" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="256dp"/>
    <ImageButton
            android:layout_width="54dp"
            android:layout_height="51dp" app:srcCompat="@drawable/stop"
            android:id="@+id/stopVoice" android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="256dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_upload_you_tube"
            android:id="@+id/uploadVoice"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="88dp" app:layout_constraintStart_toEndOf="@+id/recordVoice"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="54dp"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backToProject3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>





</android.support.constraint.ConstraintLayout>